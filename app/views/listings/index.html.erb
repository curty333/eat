<div class="jumbotron">
  <h1>Find your favorite snack below</h1>
  <h2>Just click to order</h2>
</div>



<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="center">
    <div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <%= link_to 'Show', listing, class: "btn btn-link" %>
          
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
<br>

<%= link_to "New Listing", new_listing_path, class: "btn btn-link" %>
